mixin fab
    .fixed-action-btn
        a(href="mailto:"
        + site.data.global.info.email).btn-floating.btn-large.waves-effect.waves-light.red
            i.material-icons email

mixin navbar(current_page)
    nav(role="navigation").transparent.z-depth-0
        .nav-wrapper.container
            a(href="#").brand-logo#logo-container Fabian Shallari
            a(href="#", data-activates="nav-slide").button-collapse
                i#hamburger-menu.material-icons menu
            ul.top-nav.right.hide-on-med-and-down
                li(class= current_page === 'work' ? "active" : "")
                    a(href= theme.menu.Home).waves-effect.waves-light.uppercase Work
                        i.material-icons.md-18.left.md-light code
                li(class= current_page === 'blog' ? "active" : "")
                    a(href= theme.menu.Archive).waves-effect.waves-light.uppercase Blog
                        i.material-icons.left.md-light mode_edit
                li(class= current_page === 'about' ? "active" : "")
                    a(href= theme.menu.About).waves-effect.waves-light.uppercase About
                        i.material-icons.left.md-light person
                li
                    a(href="#Contact", data-scroll).waves-effect.waves-light.uppercase Contact
                        i.material-icons.left.md-light email
            ul#nav-slide.side-nav
                li(class= current_page === 'work' ? "active" : "")
                    a(href= theme.menu.Home).waves-effect.waves-light.uppercase Work
                        i.material-icons.md-18.left.md-light code
                li(class= current_page === 'blog' ? "active" : "")
                    a(href= theme.menu.Archive).waves-effect.waves-light.uppercase Blog
                        i.material-icons.left.md-light mode_edit
                li(class= current_page === 'about' ? "active" : "")
                    a(href= theme.menu.About).waves-effect.waves-light.uppercase About
                        i.material-icons.left.md-light person
                li
                    a(href="#Contact", data-scroll, data-close-sidenav).waves-effect.waves-light.uppercase Contact
                        i.material-icons.left.md-light email

mixin card-panel(content)
    .card-panel.black-text
        != content

mixin browse_work_btn(link)
    a(href=link, data-scroll).waves-effect.white.black-text.btn.btn-medium.rounded Browse Work
        i.small.material-icons.left flash_on

mixin cover
    #home-cover.section.full-height
        +navbar('work')
        .container.white-text
            .vcenter-wrapper.full-width.no-pad-left
                .vcenter
                    br
                    .row
                        .col.s12.m10.l6
                            .font-light.level-1
                                | Hello! I am Fabian, a freelance Software Engineer focusing on Android,
                                | based in Tirana, Albania
                    br
                    .row
                        .col.s12.m10.l6
                            .font-light.level-1
                                | Currently looking for interesting and challenging work.
                                | View some of my selected work below
                    br
                    .row
                        .col
                            .small-section
                                +browse_work_btn("#" + site.data.index.projects[0].title)
                        .col
                            .small-section
                                a(href="/documents/FabianShallari-Resume.pdf", download).waves-effect.waves-light.btn.btn-medium.rounded.red-resume Download Resume
                                    i.small.material-icons.left cloud_download

mixin contact(browse_work_link)
    .section.contact-bg.full-height(id='Contact')
        .container.white-text.table.vcenter-wrapper
            .vcenter
                .row
                    .col.s12.l6.vcenter-wrapper.contact-wrapper
                        .vcenter.font-light.center-on-med-and-down
                            .android-icon
                                img(src="/images/fabian.png")
                            .level-1.font-light Do you like what you see ?
                            br
                            .level-1.font-light Lets make an app together.
                            br
                            br
                            .level-1.font-light Send me a note to:
                            br
                            a.mail-link.level-1(href="mailto:"
                            + site.data.global.info.email) #{site.data.global.info.email}
                            br
                            br
                            .section
                                +browse_work_btn(browse_work_link)

mixin project_showcase(project)
    div(class="section full-height " + project.bg, id=project.title)
        .showcase-container.white-text.table.vcenter-wrapper
            .vcenter.center-on-med-and-down
                .row
                    .col.s12.l6.vcenter-wrapper
                        .vcenter.center-on-med-and-down
                            .level-1 #{project.title}
                            .font-medium.level-3 #{project.subtitle}
                            .hide-on-small-and-down
                                br
                            .hide-on-med-and-down
                                br
                            br
                            .level-3.justify #{project.body}
                            br
                            .hide-on-med-and-down
                                .small-section
                            .section
                                if project.buttons.playStoreLink
                                    a(href=project.buttons.playStoreLink, target='_blank').waves-effect.waves-green.btn.btn-medium.rounded.white.green-text.text-lighten-1
                                        | View on Play Store
                                        i.small.material-icons.left play_arrow
                    .col.s12.l6.vcenter-wrapper
                        .vcenter
                            br
                            .row
                                .col.s2.vcenter-wrapper.no-pad.hide-if-not-enough-room.showcase-previous
                                    .vcenter.center-align
                                        i.large.material-icons chevron_left
                                .col.s8.vcenter-wrapper.no-pad.full-width-if-enough-room
                                    .vcenter
                                        .marvel-device.nexus5.device.vcenter
                                            .top-bar
                                            .sleep
                                            .volume
                                            .camera
                                            .screen
                                                .carousel.carousel-slider
                                                    each image in project.images
                                                        a.carousel-item: img(src="/images/screenshots/"
                                                        + image)
                                .col.s2.vcenter-wrapper.no-pad.hide-if-not-enough-room.showcase-next
                                    .vcenter.center-align
                                        i.large.material-icons chevron_right
                    .col.s12
                        .section
                    .col.s12.center-on-med-and-down
                        a(href="#"
                        + project.next, data-scroll).next.waves-effect.waves-light.btn-flat.btn-medium.white-text.rounded Next Project
                            i.small.material-icons.left keyboard_arrow_down

